			"}",
			"body {",
			"  font-family: var(--body-font);",
			"  line-height: 1.5;",
			"  -webkit-font-smoothing: antialiased;",
			"  color: var(--text);",
			"  background: var(--bg);",
			"  height: 100%;",
			"}",
			"img, picture, video, canvas, svg {",
			"  display: block;",
			"  max-width: 100%;",
			"}",
			"input, button, textarea, select {",
			"  font: inherit;",
			"}",
			"h1, h2, h3, h4, h5, h6 {",
			"  font-family: var(--heading-font);",
			"  font-size: 1rem;",
			"  overflow-wrap: break-word;",
			"  font-weight: normal;",
			"}",
			"ul {",
			"  list-style-type: none;",
			"  padding: 0;",
			"}",
			"ol {",
			"  padding: 0;",
			"}",
			"a {",
			"  color: var(--text);",
			"  text-decoration: none;",
			"  text-underline-offset: 2px;",
			"}",
			"button {",
			"  color: var(--text);",
			"  border: none;",
			"  cursor: pointer;",
			"  padding: 0;",
			"  background: none;",
			"  touch-action: manipulation;",
			"}",
			"*:focus {",
			"  outline-color: var(--text); /* change outline color */",
			"}"
		],
		"description": "s9.1"
	},
